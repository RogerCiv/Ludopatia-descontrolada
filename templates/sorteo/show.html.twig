{% extends 'base.html.twig' %}

{% block title %}Sorteo{% endblock %}

{% block body %}
    <h1>Sorteo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sorteo.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ sorteo.name }}</td>
            </tr>
            <tr>
                <th>Prize</th>
                <td>{{ sorteo.prize }}</td>
            </tr>
            <tr>
                <th>Winner</th>
                <td>{{ sorteo.winner }}</td>
            </tr>
            <tr>
                <th>Fecha_inicio</th>
                <td>{{ sorteo.fechaInicio ? sorteo.fechaInicio|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fecha_fin</th>
                <td>{{ sorteo.fechaFin ? sorteo.fechaFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ sorteo.cost }}</td>
            </tr>
        </tbody>
    </table>
    
<ul class="list-group">

    {% for numLoteria in numerosLoteria %}
      <li class="list-item">{{ numLoteria.numero }} <a href="{{ path('app_numeros_loteria_comprar', {'id': numLoteria.id, 'sorteoId': sorteo.id }) }}" class="btn btn-primary">Comprar</a></li>


    {% endfor %}
</ul>
    <a href="{{ path('app_sorteo_index') }}">back to list</a>

    <a href="{{ path('app_sorteo_edit', {'id': sorteo.id}) }}">edit</a>

    {{ include('sorteo/_delete_form.html.twig') }}
{% endblock %}
